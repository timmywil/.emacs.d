# -*- mode: snippet -*-
# name: arrow
# expand-env: ((yas/indent-line 'fixed))
# --
.arrow-left, .arrow-right { position: absolute; right: 12px; top: 18px; width: 0; height: 0; border: 6px solid ${1:#68686a}; border-top: 0 none; }
.arrow-left { right: 18px; border-right: 0 none; border-left-color: transparent; }
.arrow-right { border-left: 0 none; border-right-color: transparent; }
.down .arrow-left, .down .arrow-right { border-bottom: 0 none; border-top: 6px solid $1; }$0